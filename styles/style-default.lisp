(("html" :font-size "62.5%"
	 :scroll-behavior "smooth")

 ("body" :font-size "2rem"
	 :font-family "Fira Sans Regular"
	 :color "#2e3440"
	 :background-color "#e5e9f0"
	 :line-height "1.6")

 ("header" :border-bottom "0.2rem solid #3b4252"
           :margin "0 0 1rem")

 ("footer" :margin-top "3rem"
           :padding "1.2rem 0"
	   :border-top "0.2rem solid #3b4252"
	   :font-size "1.2rem"
	   :color "#555")

 ("h1" :font-size "2.4rem")

 ("h2" :font-size "2rem")

 ("blockquote" :font-family "Fira Sans Book Italic"
	       :font-style "italic")

 ("nav" :text-align "right")

 ("nav a" :font-size "1.8rem"
	  :font-weight "bold"
	  :color "black"
	  :text-decoration "none"
	  :text-transform "none")

 ("a" :text-decoration "none"
      :color "#004080")

 ("a:hover" :color "#434c5e"
	    :text-decoration "underline")

 ("table, th, td" :border "1px solid")

 ("ul li" :list-style-type "lower-greek")

 ("span .ex" :padding-left "10px")

 (".header"  :font-family "Fira Sans Light")

 (".logo a"  :font-weight "bold"
	     :color "#000"
	     :text-decoration "none")

 (".sourceCode" :background-color "#F6F8FA"
		:border-radius "15px 15px 15px 15px"
		:border "none")

 ("article .header" :font-size "1.4rem"
		    :font-style "italic"
		    :color "#4c566a"))
