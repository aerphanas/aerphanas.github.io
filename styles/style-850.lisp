(("@media (min-width: 850px)"
  ("body" :width "80rem"
	  :margin "0 auto"
	  :padding "0")

  ("header" :margin "0 0 1rem"
	    :padding "1.2rem 0")

  ("nav" :margin "0"
	 :text-align "right")

  ("nav a" :margin "0 0 0 1.2rem"
	   :display "inline")

  ("footer" :text-align "right")

  ("details" :background-color "#F6F8FA"
	     :border-radius "15px 15px 15px 15px"
	     :border "none"
	     :padding "15px 32px"
	     :text-align "center"
	     :font-size "large"
	     :text-decoration "none"
	     :display "inline-block"
	     :font-size "16px"
	     :width "100%"
	     :margin "0 auto"
	     :padding "1rem 0px 1rem 0px")

  ("details summary" :display "block"
		     :cursor "pointer")

  ("figure img" :width "100%"
		:margin "0 auto"
		:padding "0")

  ("video" :width "100%"
	   :margin "0 auto"
	   :padding "0")

  ("figure figcaption" :text-align "center"
		       :font-size "small"
		       :font-style "italic")

  (".license" :float "left")

  (".logo" :margin "0"
	   :text-align "left")

  (".logo a" :float "left"
	     :font-size "1.8rem")))
